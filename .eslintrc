{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "__DEV__": true,
        "__SERVER__": true
    },
    "rules": {
        // Strict mode
        "strict": [2, "global"],

        // Code style
        "indent": [2, 2],
        "quotes": [2, "single"]
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    }
}